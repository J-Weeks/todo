<div id="head">
<h1> List Index</h1>
</div>

<table align = "center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td class="button"><%= link_to list.name, list %></td>
        <td><%= list.category %></td>
        <td class="button"><%= link_to 'Show', list %></td>
        <td class="button"><%= link_to 'Edit', edit_list_path(list) %></td>
        <td class="button"><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New List', new_list_path %>
